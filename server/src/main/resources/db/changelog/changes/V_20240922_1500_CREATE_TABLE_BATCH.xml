<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="create-spring-batch-tables-postgresql" author="lcano">
        <preConditions onFail="MARK_RAN">
            <dbms type="postgresql"/>
        </preConditions>
        <sqlFile path="org/springframework/batch/core/schema-postgresql.sql"/>
    </changeSet>

    <changeSet id="create-spring-batch-tables-oracle" author="lcano">
        <preConditions onFail="MARK_RAN">
            <dbms type="oracle"/>
        </preConditions>
        <sqlFile path="org/springframework/batch/core/schema-oracle.sql"/>
    </changeSet>

    <changeSet id="create-spring-batch-tables-h2" author="lcano">
        <preConditions onFail="MARK_RAN">
            <dbms type="h2"/>
        </preConditions>
        <sqlFile path="org/springframework/batch/core/schema-h2.sql"/>
    </changeSet>

</databaseChangeLog>
