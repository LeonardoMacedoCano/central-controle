<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-lancamento" author="lcano">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela lancamento jÃ¡ existe">
            <not>
                <tableExists tableName="lancamento"/>
            </not>
        </preConditions>

        <createTable tableName="lancamento">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="idusuario" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="datalancamento" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="tipo" type="ENUM('DESPESA', 'RECEITA', 'PASSIVO', 'ATIVO')">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="lancamento"
                                 baseColumnNames="idusuario"
                                 constraintName="fklancamento_usuario"
                                 referencedTableName="usuario"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
