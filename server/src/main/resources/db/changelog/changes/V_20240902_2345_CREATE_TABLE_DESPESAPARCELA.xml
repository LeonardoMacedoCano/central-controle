<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-despesaparcela" author="lcano">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela despesaparcela jÃ¡ existe">
            <not>
                <tableExists tableName="despesaparcela"/>
            </not>
        </preConditions>

        <createTable tableName="despesaparcela">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="iddespesa" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="idformapagamento" type="INT"/>
            <column name="numero" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="datavencimento" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="valor" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="pago" type="CHAR(1)" defaultValue="N"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="despesaparcela"
                                 baseColumnNames="iddespesa"
                                 constraintName="fkdespesaparcela_despesa"
                                 referencedTableName="despesa"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="despesaparcela"
                                 baseColumnNames="idformapagamento"
                                 constraintName="fkdespesaparcela_formapagamento"
                                 referencedTableName="despesaformapagamento"
                                 referencedColumnNames="id"/>
        <addUniqueConstraint columnNames="iddespesa,numero"
                             constraintName="unique_despesaparcela_despesa_numero"
                             tableName="despesaparcela"/>
    </changeSet>

</databaseChangeLog>
