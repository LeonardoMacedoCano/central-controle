<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="add-column-valor-table-ativo" author="lcano">
        <preConditions onFail="MARK_RAN" onFailMessage="A coluna valor da tabela ativo ja existe">
            <not>
                <columnExists tableName="ativo" columnName="valor"/>
            </not>
        </preConditions>

        <addColumn tableName="ativo">
            <column name="valor" type="${number_10_2}" />
        </addColumn>
    </changeSet>

    <changeSet id="remove-colunas-ativo" author="lcano">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="ativo"/>
        </preConditions>

        <dropColumn tableName="ativo" columnName="ticker"/>
        <dropColumn tableName="ativo" columnName="quantidade"/>
        <dropColumn tableName="ativo" columnName="precounitario"/>
    </changeSet>


</databaseChangeLog>
