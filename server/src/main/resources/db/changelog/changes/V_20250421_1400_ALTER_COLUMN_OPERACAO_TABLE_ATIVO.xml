<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="alter-table-ativo-operacao" author="lcano">
        <preConditions onFail="MARK_RAN" onFailMessage="A coluna operacao nÃ£o existe na tabela ativo">
            <tableExists tableName="ativo"/>
            <columnExists tableName="ativo" columnName="operacao"/>
        </preConditions>

        <modifyDataType tableName="ativo" columnName="operacao" newDataType="${varchar_10}"/>
    </changeSet>

</databaseChangeLog>
